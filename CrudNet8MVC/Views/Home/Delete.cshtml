@model CrudNet8MVC.Models.User

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-center my-4 text-danger">
    <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white text-center">
                <h5 class="mb-0">
                    ¿Está seguro que desea eliminar este usuario?
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5"><i class="fas fa-user"></i> Nombre:</dt>
                    <dd class="col-sm-7">@Model.Nombre</dd>

                    <dt class="col-sm-5"><i class="fas fa-id-card"></i> DNI:</dt>
                    <dd class="col-sm-7">@Model.DNI</dd>

                    <dt class="col-sm-5"><i class="fas fa-phone"></i> Teléfono:</dt>
                    <dd class="col-sm-7">@Model.Telefono</dd>

                    <dt class="col-sm-5"><i class="fas fa-envelope"></i> Correo:</dt>
                    <dd class="col-sm-7">@Model.Correo</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Eliminar Definitivamente
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>