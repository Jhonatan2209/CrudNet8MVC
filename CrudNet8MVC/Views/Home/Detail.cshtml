@model CrudNet8MVC.Models.User

@{
    ViewData["Title"] = "Detalle del Usuario";
}

<!-- Título -->
<h2 class="text-center my-4">Detalle del Usuario</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-circle"></i> @Model.Nombre
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5"><i class="fas fa-id-card"></i> DNI:</dt>
                    <dd class="col-sm-7">@Model.DNI</dd>

                    <dt class="col-sm-5"><i class="fas fa-phone"></i> Teléfono:</dt>
                    <dd class="col-sm-7">@Model.Telefono</dd>

                    <dt class="col-sm-5"><i class="fas fa-envelope"></i> Correo:</dt>
                    <dd class="col-sm-7">@Model.Correo</dd>

                    <dt class="col-sm-5"><i class="fas fa-calendar-alt"></i> Fecha de Creación:</dt>
                    <dd class="col-sm-7">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="fas fa-edit"></i> Editar
                </a> *@
            </div>
        </div>
    </div>
</div>